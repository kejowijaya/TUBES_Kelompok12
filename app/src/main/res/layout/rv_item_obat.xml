<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    android:background="@drawable/bckobat"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_nama_dosen"
        style="@style/TextAppearance.MaterialComponents.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Nama Obat"
        app:layout_constraintStart_toEndOf="@+id/gambar_obat"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_details_dosen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="17dp"
        android:text="Harga"
        app:layout_constraintStart_toEndOf="@+id/gambar_obat"
        app:layout_constraintTop_toBottomOf="@+id/tv_nama_dosen" />

    <ImageView
        android:id="@+id/gambar_obat"
        android:layout_width="103dp"
        android:layout_height="76dp"
        android:src="@drawable/obhcombi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>